@inject NavigationManager NavigationManager
@inject ILogger<RedirectToLogin> Logger
@inject ILoggerFactory LoggerFactory

@code {
    protected override void OnInitialized()
    {
        var baseUri = NavigationManager.BaseUri;

        Logger.LogInformation(baseUri);
        
        var logger = LoggerFactory.CreateLogger("RedirectToLogin");
        logger.LogWarning($"LoggerFactory: {baseUri}");


        NavigationManager.NavigateTo($"Account/Login2?returnUrl={Uri.EscapeDataString(NavigationManager.Uri)}", forceLoad: true);
    }
}
